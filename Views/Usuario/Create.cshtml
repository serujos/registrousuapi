@model registrousuapi.Models.Usuario
@{
    ViewData["Title"] = "Registrar Usuario";
}

<h2 class="text-2xl font-bold mb-4">Registrar Usuario</h2>

<form asp-action="Create" method="post" class="space-y-4 max-w-md bg-white shadow p-6 rounded-xl">
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(false, "", new { @class = "text-red-500 mb-4" })

    <div>
        <label asp-for="Nombre" class="block font-medium">Nombre</label>
        <input asp-for="Nombre" class="border rounded w-full p-2" />
        <span asp-validation-for="Nombre" class="text-red-500 text-sm" />
    </div>
    <div>
        <label asp-for="Email" class="block font-medium">Email</label>
        <input asp-for="Email" class="border rounded w-full p-2" />
        <span asp-validation-for="Email" class="text-red-500 text-sm" />
    </div>
    <div>
        <label asp-for="PaisCode" class="block font-medium">Código de País (Ej: PE, US, AR)</label>
        <input asp-for="PaisCode" class="border rounded w-full p-2" />
        <span asp-validation-for="PaisCode" class="text-red-500 text-sm" />
    </div>
    <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
        Registrar
    </button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
